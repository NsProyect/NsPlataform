<h1>Listado de Apartamentos</h1>


<%= form_tag apartaments_path, :method => 'get' do %>
  <% content_tag :label do %> 
    <strong> Buscar:</strong>
    <%= text_field_tag :search, params[:search] %> 
    <%= submit_tag "Buscar", :name => nil %> 
  <% end %> 
<% end %>


<table class="table table-striped table-hover ">
  <thead>
    <tr class="danger">
      <th>Direccion</th>
      <th>Estado</th>
      <th>Habitaciones</th>
      <th>Costo</th>
      <th>Comodidades</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartaments.each do |apartament| %>
      <tr class="success">
        <td><%= apartament.adress %></td>
        <td><%= apartament.states.name rescue nil %></td>
        <td><%= apartament.room %></td>
        <td><%= apartament.cost %></td>
        <td><%= apartament.amenities %></td>
        <td><%= link_to 'Ver', apartament %></td>
        <td><%= link_to 'Editar', edit_apartament_path(apartament) %></td>
        <td><%= link_to 'Destruir', apartament, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Apartamento', new_apartament_path %>
<%= will_paginate @apartaments, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
<br> 
Apartamentos: <%= @apartaments.count %>