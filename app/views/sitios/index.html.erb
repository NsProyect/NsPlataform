<div class="jumbotron">
  <h1>Sitios de Interes</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Imagen</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Direccion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sitios.each do |sitio| %>
        <tr>
          <td><%= image_tag sitio.image.url(:thumb) %></td>
          <td><%= sitio.nombre %></td>
          <td><%= sitio.descripcion %></td>
          <td><%= sitio.direccion %></td>
          <td><%= link_to 'Ver', sitio %></td>
          <td><%= link_to 'Editar', edit_sitio_path(sitio) %></td>
          <td><%= link_to 'Eliminar', sitio, method: :delete, data: { confirm: 'Esta seguro que desea eliminar el sitio?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= will_paginate @sitios, renderer: BootstrapPagination::Rails %>
  <br>
  Sitios: <%= @sitios.count %>
  <br>
  <%= link_to 'Nuevo Sitio', new_sitio_path %>
</div>
