<h1>Apartamentos</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Address</th>
      <th>State</th>
      <th>Room</th>
      <th>Cost</th>
      <th>Amenities</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.code %></td>
        <td><%= apartment.address %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.room %></td>
        <td><%= apartment.cost %></td>
        <td><%= apartment.amenities %></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= link_to 'Ver', apartment %></td>
        <td><%= link_to 'Editar', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destruir', apartment, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Apartamento', new_apartment_path %>
