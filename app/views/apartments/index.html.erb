<h1>Apartamentos</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Reserva</th>
      <th>Codigo</th>
      <th>Direccion</th>
      <th>Estado</th>
      <th>Hablitaciones</th>
      <th>Costo</th>
      <th>Comodidades</th>
      <th>Galeria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= link_to "Reservar", apartment_reservations_path(apartment) %></td> 
        <td><%= apartment.code %></td>
        <td><%= apartment.address %></td>
        <td><%= apartment.state.name rescue nil%></td>
        <td><%= apartment.room %></td>
        <td><%= apartment.cost %></td>
        <td><%= apartment.amenities %></td>
        <td><%= image_tag apartment.image.url(:thumb) %></td>
        <td><%= link_to 'Ver', apartment %></td>
        <td><%= link_to 'Editar', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Eliminar', apartment, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Apartamento', new_apartment_path %>