
<h1>Apartamentos</h1>
<%= search_form_for @search do |f| %>
  <div class="field">
   <%= f.label :cost_cont ,"costo" %>   
    <%= f.text_field :cost_cont %>   
  </div>
  <div class="field">
   <%= f.label :room_cont ,"NÂ° Habitaciones" %>   
    <%= f.text_field :room_cont %>   
  </div>
  <div class="actions"><%= f.submit "Buscar" %></div>
<% end %>


<ul class="nav nav-tabs" style="margin-bottom: 15px;">

</ul>
<h1 class="alert alert-info">Apartamentos</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Reserva</th>
      <th>Direccion</th>
      <th>Estado</th>
      <th>Hablitaciones</th>
      <th>Costo</th>
      <th>Comodidades</th>
      <th>Galeria</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><span class="label label-default"><%= link_to "Reservar", apartment_reservations_path(apartment) %></span></td>
        <td><%= apartment.address %></td>
        <td><%= apartment.state.name rescue nil%></td>
        <td><%= apartment.room %></td>
        <td><%= apartment.cost %></td>
        <td><%= apartment.amenities %></td>
        <td><%= image_tag apartment.image.url(:thumb) %></td>
        <td><%= link_to 'Ver', apartment, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Editar', edit_apartment_path(apartment), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Eliminar', apartment, method: :delete, data: { confirm: 'Esta Seguro?' }, class: "btn btn-warning btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar', new_apartment_path, class: "btn btn-primary btn-xs" %>
