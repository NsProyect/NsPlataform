<h1>Listado de Inquietudes Peticiones Quejas o Reclamos</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Mail</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ipqrs.each do |ipqr| %>
      <tr>
        <td><%= ipqr.name %></td>
        <td><%= ipqr.mail %></td>
        <td><%= ipqr.comments %></td>
        <td><%= link_to 'Show', ipqr %></td>
        <td><%= link_to 'Edit', edit_ipqr_path(ipqr) %></td>
        <td><%= link_to 'Destroy', ipqr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Ipqr', new_ipqr_path %>
