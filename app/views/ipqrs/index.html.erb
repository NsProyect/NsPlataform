<h1 class="alert alert-info">Listado de Inquietudes Peticiones Quejas o Reclamos</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Mail</th>
      <th>Comentario</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @ipqrs.each do |ipqr| %>
      <tr>
        <td><%= ipqr.name %></td>
        <td><%= ipqr.mail %></td>
        <td><%= ipqr.comments %></td>
        <td><%= link_to 'Ver', ipqr, class: "btn btn-default btn-xs" %></td>
        <% if current_user.admin == true %>
          <td><%=  link_to 'Eliminar', ipqr, method: :delete, data: { confirm: 'Esta Seguro?' }, class: "btn btn-warning btn-xs" %></td>
        <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

