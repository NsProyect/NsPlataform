<h1>Reservaciones</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Tipo de Documento</th>
      <th>Documento</th>
      <th>Fecha de Reserva</th>
      <th>Correo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.aptcode %></td>
        <td><%= reservation.name %></td>
        <td><%= reservation.doctype %></td>
        <td><%= reservation.doc %></td>
        <td><%= reservation.reservationDate %></td>
        <td><%= reservation.mail %></td>
        <td><%= link_to 'Ver', reservation %></td>
        <td><%= link_to 'Editar', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destruir', reservation, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Reservacion', new_reservation_path %>
