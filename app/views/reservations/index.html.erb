<h1>Reservas</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Codigo Apto</th>
      <th>Nombre</th>
      <th>Tipo de Documento</th>
      <th>Documento</th>
      <th>Correo</th>
      <th>Fecha de Ingreso</th>
      <th>Fecha de Salida</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.aptocode %></td>
        <td><%= reservation.name %></td>
        <td><%= reservation.doctype.name rescue nil%></td>
        <td><%= reservation.doc %></td>
        <td><%= reservation.mail %></td>
        <td><%= reservation.reservaciondatein %></td>
        <td><%= reservation.reservationdateout %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Reserva', new_reservation_path %>
