<h1>Reservas</h1>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo de Documento</th>
      <th>Documento</th>
      <th>Correo</th>
      <th>Fecha de Ingreso</th>
      <th>Fecha de Salida</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.name %></td>
        <td><%= reservation.doctype.name rescue nil%></td>
        <td><%= reservation.doc %></td>
        <td><%= reservation.mail %></td>
        <td><%= reservation.reservaciondatein %></td>
        <td><%= reservation.reservationdateout %></td>
        
        <td><%= link_to 'Ver', apartment_reservation_path(@apartment,reservation) %></td>
        <td><%= link_to 'Editar', edit_apartment_reservation_path(@apartment,reservation) %></td>
        <td><%= link_to 'Eliminar', apartment_reservation_path(@apartment,reservation) , method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

