<h1 class="alert alert-info">Usuarios</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Documento</th>
      <th>Mail</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.doc %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Ver', user, class: "btn btn-success btn-xs" %></td>

        <% if current_user.admin == true %>
          <td><%= link_to 'Editar', edit_user_path(user), class: "btn btn-success btn-xs" %></td>
        <% end %> 

        <% if current_user.admin == true %>
          <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Esta Seguro?' }, class: "btn btn-warning btn-xs" %></td>
        <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin == true %>
  <%= link_to 'Nuevo', new_user_path, class: "btn btn-primary btn-xs"  %>
<% end %> 