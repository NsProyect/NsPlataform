<h1>Reserva</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Fecha ingreso</th>
      <th>Fecha salida</th>
      <th>Apartamento</th>
      <th>Hostal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.nombre %></td>
        <td><%= reserva.email %></td>
        <td><%= reserva.fecha_ingreso %></td>
        <td><%= reserva.fecha_salida %></td>
        <td><%= reserva.apartamento %></td>
        <td><%= reserva.hostal %></td>
        <td><%= link_to 'Ver', reserva %></td>
        <td><%= link_to 'Editar', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Eliminar', reserva, method: :delete, data: { confirm: 'Esta seguro de Eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Reserva', new_reserva_path %>
