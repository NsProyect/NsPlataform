<h1 class="alert alert-info">Estados</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= state.description %></td>
        <td><%= link_to 'Ver', state, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Editar', edit_state_path(state), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Eliminar', state, method: :delete, data: { confirm: 'Esta Seguro?' }, class: "btn btn-warning btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Estado', new_state_path, class: "btn btn-primary btn-xs"  %>
