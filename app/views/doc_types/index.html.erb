<h1>Tipos de Documento</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Sigla</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doc_types.each do |doc_type| %>
      <tr>
        <td><%= doc_type.abbrev %></td>
        <td><%= doc_type.name %></td>
        <td><%= link_to 'Ver', doc_type %></td>
        <td><%= link_to 'Editar', edit_doc_type_path(doc_type) %></td>
        <td><%= link_to 'Destruir', doc_type, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Documento', new_doc_type_path %>
