<h1>Listado de Cargos</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.name %></td>
        <td><%= link_to 'Ver', charge %></td>
        <td><%= link_to 'Editar', edit_charge_path(charge) %></td>
        <td><%= link_to 'Destruir', charge, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar', new_charge_path, class: "btn btn-primary btn-xs" %>
